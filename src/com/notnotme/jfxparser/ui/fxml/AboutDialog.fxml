<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mRoot" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.notnotme.jfxparser.controller.ui.AboutDialogController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <ImageView pickOnBounds="true" preserveRatio="true">
        <Image url="@../../res/iimlogo.png" />
    </ImageView>
    <HBox alignment="CENTER" spacing="5.0">
        <padding>
            <Insets left="10.0" right="10.0" top="15.0" />
        </padding>
        <Label text="%appname">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Label>
        <Label text="%appversion">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Label>
    </HBox>
    <HBox alignment="CENTER">
        <VBox.margin>
            <Insets bottom="15.0" />
        </VBox.margin>
        <Label text="%use" />
        <Hyperlink fx:id="mMuxmLink" text="muxm" />
    </HBox>
    <HBox alignment="CENTER">
        <VBox.margin>
            <Insets />
        </VBox.margin>
        <Label text="%soundby" />
        <Hyperlink fx:id="mSongLink" text="Ultrasyd" />
    </HBox>
    <HBox alignment="CENTER">
        <padding>
            <Insets bottom="15.0" />
        </padding>
        <Label text="%iconsby" />
        <Hyperlink fx:id="mIconsLink" text="damieng" />
    </HBox>
    <Hyperlink fx:id="mGithubLink" text="http://www.github.com/notnotme" />
</VBox>
